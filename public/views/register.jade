extends layout

block content
  .row
      .small-5.medium-4.large-3.columns
        h1
          img(src='img/DrWow.jpg')
      .small-12.columns
        hr

  .row
      .large-12.columns
          h1 Register
          br
          ul.tabs(data-tab='', role='tablist')
            li.tab-title.active(role='presentation')
                a(href='#panel2-1', role='tab', tabindex='0', aria-selected='true', aria-controls='panel2-1') Patient
            li.tab-title(role='presentation')
                a(href='#panel2-2', role='tab', tabindex='0', aria-selected='false', aria-controls='panel2-2') Doctor
            .tabs-content
              section#panel2-1.content.active(role='tabpanel', aria-hidden='false')
                form(role='form', action="/register",method="post", style='max-width: 300px;')
                  .form-group
                      input.form-control(type='text', name="fullname", placeholder='Name')
                  .form-group
                      input.form-control(type='text', name="email", placeholder='Email')
                  .form-group
                      select(name='gender')
                        option(value='male') Male
                        option(value='female') Female
                  .form-group
                      input.form-control(type='text', name="age", placeholder='Age')
                  .form-group
                      input.form-control(type='text', name="address", placeholder='Address')
                  .form-group
                      input.form-control(type='text', name="username", placeholder='Username', id='username')
                  .form-group
                      input.form-control(type='password', name="password", placeholder='Password', id='password')
                  .form-group
                      input.form-control(type='hidden', readonly="readonly", name="role", value='patient', id='role')
                  button.small.secondary(type='submit', id='submit') Submit
                  &nbsp;
                  a(href='/')
                    button.small.secondary(type="button") Cancel
              section#panel2-2.content(role='tabpanel', aria-hidden='true')
                form(role='form', action="/register",method="post", style='max-width: 300px;')
                  .form-group
                      input.form-control(type='text', name="fullname", placeholder='Name')
                  .form-group
                      input.form-control(type='text', name="email", placeholder='Email')
                  .form-group
                      input.form-control(type='text', name="gmcRef", placeholder='GMC Reference Number')
                  .form-group
                      input.form-control(type='text', name="username", placeholder='Username', id='username')
                  .form-group
                      input.form-control(type='password', name="password", placeholder='Password', id='password')
                  .form-group
                      input.form-control(type='hidden', readonly="readonly", name="role", value='doctor', id='role')
                  button.small.secondary(type='submit', id='submit') Submit
                  &nbsp;
                  a(href='/')
                    button.small.secondary(type="button") Cancel


              footer.row
                .large-12.columns
                  hr

                  .row
                    .large-6.columns
                      p &copy; Copyright 2015 DrWow

                    .large-6.columns
                      ul.inline-list.right
                        li
                          a(href='#') Team

                        li
                          a(href='#') Careers

                        li
                          a(href='#') T&Cs

                        li
                          a(href='#') Privacy Policy

                        li
                          a(href='#') FAQ
