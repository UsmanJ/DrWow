extends layout

block content
  .container
    h1 Login Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/dr/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='role', name="role", placeholder='role')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/dr/index')
        button.btn.btn-primary(type="button") Cancel
