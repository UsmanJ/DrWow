extends layout

block content
  if(!params.user)
    .row
        .small-5.medium-4.large-3.columns
          h1
            a(href="/")
              img(src='img/DrWow.jpg')
        .large-9.columns
          ul.right.button-group

            li
              a.button.small.success(href='#') ABOUT US

            li
              a.button.small.success(href='#') SERVICES

            li
              a.button.small.success(href='#') CONTACT US

            li
              a.button.small.success(href="/login") LOGIN

            li
              a.button.small.success(href="/register") REGISTER

    .row
        ul(data-orbit='')

              li.active
                img(src='img/1.jpg', height='450', width='1000')

              li.active
                  img(src='img/2.jpg', height='450', width='1000')

              li.active
                img(src='img/3.jpg', height='450', width='1000')

          hr

        br

    h4(align='center', font-) Meet Our Doctors
      br
      br
    .row
        .large-4.columns
            img(src='img/9.png', height='400', width='300')
            br
            br
            h4(align='center') Dr. Philip Noble
            p(align='center')
               “I'm passionate about being a GP and also about using technology to improve health, so I'm thrilled to be part of the DrWow team delivering revolutionary, high quality medical care when and where it is needed. Not in the future, but right now.”

          .large-4.columns
            img(src='img/10.png', height='400', width='300')
            br
            br
            h4(align='center') Dr. Usman Khan
            p(align='center')
               "DrWow is an innovative service for busy individuals who need to see a doctor when it suits them. To be part of this health revolution is exciting and seeing DrWow’s growth is testament to the high quality service it provides."

          .large-4.columns
            img(src='img/11.png', height='400', width='300')
            br
            br
            h4(align='center') Dr. Martine Couteau
            p(align='center')
               "DrWow is an excellent way to get an answer to a medical question that you’ve always wanted to ask. I relish the opportunity to provide a great service to patients that is not limited by a practice boundary.”
               br
               br

          hr
        br

      .row
          .large-12.columns
              img(src='img/4.jpg', height='450', width='1000')
              br
              br
              br

          hr

    h4(align='center') Awards
            br
            br

          .row(align='center')
              .large-4.columns
                  img(src='img/5.png', height='200', width='200')

              .large-4.columns
                  img(src='img/6.jpg', height='200', width='200')

              .large-4.columns
                  img(src='img/7.jpg', height='200', width='200')
                  br
                  br
                  br


  if(params.user && params.user.role === 'patient')
    .row
        .small-5.medium-4.large-3.columns
          h1
            a(href="/")
              img(src='img/DrWow.jpg')
        .large-9.columns
          ul.right.button-group

            li
              a.button.small.success(href='#') MY HEALTH

            li
              a.button.small.success(href='#') MY APPOINTMENTS

            li
              a.button.small.success(href='#') MY ACCOUNT

            li
              a.button.small.success(href="/logout") LOGOUT
          hr
          br
          br

    .row
        .large-6.columns
          .panel
            .row
              .large-12.columns(align='center')
                ul.small-block-grid-1
                  li
                    img(src='img/8.png')
                  li
                    a.button.small.success(href='/session') Call a Doctor

        .large-6.columns
          .panel
            .row
              .large-12.columns
                ul.small-block-grid-2
                  li
                    img(src='img/12.jpg', height='300', width='400')
                    p(align='center')
                      a(href='#') Medical
                  li
                    img(src='img/13.jpg', height='200', width='400')
                    p(align='center')
                      a(href='#') Pediatrics
                  li
                    img(src='img/14.jpg', height='200', width='400')
                    p(align='center')
                      a(href='#') Pregnancy
                  li
                    img(src='img/15.jpg', height='200', width='400')
                    p(align='center')
                      a(href='#') Psychology


  if(params.user && params.user.role === 'doctor')
    .row
        .small-5.medium-4.large-3.columns
          h1
            a(href="/")
              img(src='img/DrWow.jpg')
        .large-9.columns
          ul.right.button-group

            li
              a.button.small.success(href='/session') PATIENT RECORDS

            li
              a.button.small.success(href='#') PHARMACIES

            li
              a.button.small.success(href='#') NEWS

            li
              a.button.small.success(href="/logout") LOGOUT
    br


    .row
        .large-5.small-12.columns
            img(src='img/spike.jpg')

            .hide-for-small.panel(align='center')
              h3 Dr. Spike

              h5.subheader(align='center')
                MBBS MD(Med) MRCP(UK) MRCGP(UK)

            a(href='#')
              .panel.callout.radius(align='center')
                  a.button.small.success(href='/session') See your next patient


          h3(align='center') Patients currently queuing...
          br
          br

        .large-7.columns
          .row
            .small-4.small-3.columns
              img(src='img/nikesh.jpg')
              .panel
                h5 Nikesh Ashar
                h6.subheader

            .small-4.small-3.columns
              img(src='img/philip.jpg')
              .panel
                h5 Philip Clarke
                h6.subheader

            .small-4.small-3.columns
              img(src='img/usman.jpg')
              .panel
                h5 Usman Jamil
                h6.subheader

          br
          br


  footer.row
    .large-12.columns
      hr

      .row
        .large-6.columns
          p &copy; Copyright 2015 DrWow

        .large-6.columns
          ul.inline-list.right
            li
              a(href='#') Team

            li
              a(href='#') Careers

            li
              a(href='#') T&Cs

            li
              a(href='#') Privacy Policy

            li
              a(href='#') FAQ
