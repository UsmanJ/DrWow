extends layout

block content
  .row
      .large-12.columns
        h1
          img(src='img/DrWow.jpg')
      .large-12.columns
          hr

  .row
      .large-12.columns
        h1 Login Page
        p.lead Say something worthwhile here.
        br
        form(role='form', action="/login",method="post", style='max-width: 300px;')
          .form-group
              input.form-control(type='text', name="username", placeholder='Enter Username', id='username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password', id='password')
          button.small.secondary(type='submit', id='submit') Submit
          &nbsp;
          a(href='/')
            button.small.secondary(type="button") Cancel

  footer.row
    .large-12.columns
      hr
      .row
        .large-6.columns
          p DrWow
