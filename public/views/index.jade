extends layout

block content
  if(!params.user)
    .row
        .small-5.medium-4.large-3.columns
          h1
            img(src='img/DrWow.jpg')
        .small-7.medium-8.large-9.columns
            ul.button-group.right
              li
                a.button.small.success(href="/login") Login
              li
                a.button.small.success(href="/register") Register
          .small-12.columns
              hr
  if(params.user)
    .row
        .small-5.medium-4.large-3.columns
          h1
            img(src='img/DrWow.jpg')
        .small-7.medium-8.large-9.columns
            ul.button-group.right
              li
                a.button.small.success(href="/logout") Logout
        .small-12.columns
            hr

    .row
      h2 Welcome back #{params.user.name}
      if(params.user.role === "doctor")
        .large-12.columns
          &nbsp;
          a(href='/session')
            button.small.secondary(type="button") Attend Patients

      if(params.user.role === "patient")
        .large-12.columns
          &nbsp;
          a(href='/session')
            button.small.secondary(type="button") Speak to a Dr
